{
    "name": "think.studio/nova-flexible-content-field-shortcode",
    "description": "Designed specifically for the ability to add shortcodes to existing content.",
    "keywords": [
        "laravel-nova",
        "nova",
        "nova-flexible-content",
        "shortcode"
    ],
    "homepage": "https://github.com/yaroslawww/nova-flexible-content-field-shortcode",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "authors": [
        {
            "name": "Yaroslav Georgitsa",
            "email": "yg@think.studio",
            "homepage": "https://github.com/yaroslawww",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0",
        "laravel/nova": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.20",
        "orchestra/testbench": "^8.6",
        "phpunit/phpunit": "^10.3",
        "psalm/plugin-laravel": "^2.8",
        "think.studio/nova-flexible-content": "^4.0",
        "vimeo/psalm": "^5.14"
    },
    "autoload": {
        "psr-4": {
            "ThinkOne\\NovaFlexibleContentFieldShortcode\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ThinkOne\\NovaFlexibleContentFieldShortcode\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ThinkOne\\NovaFlexibleContentFieldShortcode\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "XDEBUG_MODE=coverage vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
